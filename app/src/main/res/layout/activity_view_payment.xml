<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".modules.payment.activity.ViewPaymentActivity">

    <LinearLayout android:layout_width="fill_parent"
                  android:layout_height="25pt">
        <Spinner android:layout_width="fill_parent"
                 android:layout_height="fill_parent">

        </Spinner>

    </LinearLayout>
    <LinearLayout android:layout_width="fill_parent"
                  android:layout_height="fill_parent"
    android:orientation="vertical">
        <android.support.v7.widget.RecyclerView android:layout_width="fill_parent"
                                                android:layout_height="fill_parent"
                                                android:layout_weight="1"
                                                android:id="@+id/view_payment_rv">

        </android.support.v7.widget.RecyclerView>
        <Button android:layout_width="fill_parent"
                android:layout_weight="10"
                android:text="View Payment History"
                android:fontFamily="@font/samsungsansregular"
                android:textAllCaps="false"
                android:textSize="8pt"
                android:background="@color/colorPrimaryDark"
                android:textColor="@color/colorWhite"
                android:id="@+id/payment_history_bt"
                android:layout_height="fill_parent"/>

    </LinearLayout>


</LinearLayout>