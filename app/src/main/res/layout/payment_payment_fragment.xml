<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:orientation="vertical"
              android:layout_height="match_parent">
    <LinearLayout android:layout_width="fill_parent"
                  android:orientation="horizontal"
                  android:layout_height="25pt">


        <Button android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="Select Month*"
                android:textSize="7pt"
                android:id="@+id/month_btn"
                android:textAllCaps="false"
                android:layout_weight="1"

                android:textColor="@color/colorWhite"
                android:fontFamily="@font/samsungsansregular"
                android:background="@color/colorPrimaryDark"/>


        <Button android:layout_width="fill_parent"
                android:layout_height="fill_parent"

                android:id="@+id/year_btn"
                android:textAllCaps="false"
                android:layout_weight="1"
                android:text="Select Year*"
                android:textSize="7pt"
                android:textColor="@color/colorWhite"
                android:fontFamily="@font/samsungsansregular"
                android:background="@color/colorGreen"/>


    </LinearLayout>
    <LinearLayout android:layout_width="fill_parent"
                  android:layout_height="fill_parent"
                  android:orientation="vertical">
        <android.support.v7.widget.RecyclerView android:layout_width="fill_parent"
                                                android:layout_height="fill_parent"
                                                android:id="@+id/payment_history_rv"
                                                android:layout_weight="1">

        </android.support.v7.widget.RecyclerView>
        <LinearLayout android:layout_width="fill_parent"
                      android:layout_height="fill_parent"
                      android:orientation="vertical"
                      android:layout_weight="10">
            <Button android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:text="Total Paid"
                    android:fontFamily="@font/samsungsansregular"
                    android:textAllCaps="false"
                    android:gravity="center_vertical"
                    android:paddingLeft="10pt"
                    android:textColor="@color/colorWhite"
                    android:textSize="7pt"
                    android:id="@+id/total_paid_bt"
                    android:background="@color/colorPrimaryDark"/>


        </LinearLayout>

    </LinearLayout>


</LinearLayout>